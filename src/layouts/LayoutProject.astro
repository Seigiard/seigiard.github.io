---
import Header, { Props as HeaderProps } from '../components/Header.astro';

export interface Props extends HeaderProps {}

const props = Astro.props;
const { title, lang } = props;

const ownerName = lang === 'ru' ? 'Андрей Борисенко' : 'Andrew Borisenko';
---

<!doctype html>
<html class='no-js' lang='ru'>
    <head>
        <Header {...props} />
    </head>
    <body>
        <header>
            <nav>
                <menu
                    ><li>
                        <a href='/index.html' class='return-back'>
                            {ownerName}
                        </a>
                    </li></menu
                >
            </nav>
            <h1>{title}</h1>
        </header>
        <main><slot /></main>
    </body>
</html>
